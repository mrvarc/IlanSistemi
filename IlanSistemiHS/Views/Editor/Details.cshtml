@model DetailsVM

@{
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@500&display=swap" rel="stylesheet">
</head>

<body>
    <div class="title">İlan Detayı</div>
    <div class="card">
        <img src=@Model.ImageUrl alt="Ürün Resmi" width="700" height="450" />
        <div class="card-body">
            <p class="category-name">@Model.CategoryName</p>
            <p>@Model.Description</p>
            <p>@Model.Price.ToString("N2") @Model.Currency</p>
        </div>
    </div>
    <a href="@Url.Action("Index", "HomePage")" class="button">Anasayfaya Dön</a>
</body>

<style>
    body {
        font-family: 'Quicksand', sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }

    .title {
        font-size: 2em;
        margin-bottom: 1em;
    }

    .card {
        text-align: center;
        margin-bottom: 1em;
    }

    .card-body p {
        margin: 0.5em 0;
    }

    .card-body p.category-name {
        font-weight: bold;
    }

    .button {
        background-color: #343a40;
        color: white;
        padding: 12px 30px;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        font-size: 1em;
        cursor: pointer;
        outline: none;
        width: 200px;
        display: block;
        margin: 20px auto;
        text-align: center;
    }
</style>